<!--                        android:text="RATE US"-->
<!--                        android:textColor="@color/black"-->
<!--                        android:textSize="21sp"-->
<!--                        android:textStyle="bold" />-->

<!--                </LinearLayout>-->

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>